                        Padding="16">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelectPackCommand}"
                                              CommandParameter="{Binding Packs[3]}" />
                    </Border.GestureRecognizers>
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Label Grid.Column="0"
