                                   FontSize="18"
                                   TextColor="#3b82f6" />
                            <Label Text="3 cards - Basic odds"
                                   FontFamily="InterRegular"
                                   FontSize="12"
                                   TextColor="#94a3b8" />
                        </VerticalStackLayout>
                        <Border Grid.Column="2"
                                StrokeShape="RoundRectangle 8"
                                BackgroundColor="#3b82f6"
                                Padding="16,8"
                                VerticalOptions="Center">
                            <HorizontalStackLayout Spacing="4">
                                <Label Text="ðŸª™" FontSize="16" />
                                <Label Text="100"
                                       FontFamily="OrbitronBold"
                                       FontSize="16"
                                       TextColor="White" />
                            </HorizontalStackLayout>
                        </Border>
                    </Grid>
                </Border>

                <!-- Premium Pack -->
                <Border StrokeShape="RoundRectangle 16"
                        BackgroundColor="#1e293b"
                        Stroke="#a855f7"
                        StrokeThickness="2"
                        Padding="16">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelectPackCommand}"
                                              CommandParameter="{Binding Packs[1]}" />
