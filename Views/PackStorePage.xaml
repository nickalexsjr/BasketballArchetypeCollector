                            <Label Text="Premium Pack"
                                   FontFamily="OrbitronBold"
                                   FontSize="18"
                                   TextColor="#a855f7" />
                            <Label Text="3 cards - 2x rare chance, guaranteed Uncommon+"
                                   FontFamily="InterRegular"
                                   FontSize="12"
                                   TextColor="#94a3b8" />
                            <HorizontalStackLayout Spacing="4" Margin="0,4,0,0">
                                <Border StrokeShape="RoundRectangle 4"
                                        BackgroundColor="#22c55e"
                                        Padding="4,2">
                                    <Label Text="Uncommon+"
                                           FontFamily="InterSemiBold"
                                           FontSize="10"
                                           TextColor="White" />
                                </Border>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                        <Border Grid.Column="2"
                                StrokeShape="RoundRectangle 8"
                                BackgroundColor="#a855f7"
                                Padding="16,8"
                                VerticalOptions="Center">
                            <HorizontalStackLayout Spacing="4">
                                <Label Text="ðŸª™" FontSize="16" />
                                <Label Text="250"
                                       FontFamily="OrbitronBold"
                                       FontSize="16"
                                       TextColor="White" />
