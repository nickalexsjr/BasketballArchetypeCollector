<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BasketballArchetypeCollector.Views.Popups.LuckySpinPopup"
             BackgroundColor="#000000CC"
             Shell.NavBarIsVisible="False">

    <Grid VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
        <Border StrokeShape="RoundRectangle 20"
                BackgroundColor="#1e293b"
                Stroke="#f97316"
                StrokeThickness="3"
                Padding="24"
                MaximumWidthRequest="340">
            <VerticalStackLayout Spacing="20">
                <!-- Header -->
                <VerticalStackLayout Spacing="4">
                    <Label Text="ðŸŽ° LUCKY SPIN"
                           FontFamily="OrbitronBold"
                           FontSize="24"
                           TextColor="#f97316"
                           HorizontalTextAlignment="Center" />
                    <Label Text="Spin to win coins!"
                           FontFamily="InterRegular"
                           FontSize="14"
                           TextColor="#94a3b8"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>

                <!-- Spin Display -->
                <Border StrokeShape="RoundRectangle 16"
                        BackgroundColor="#0f172a"
                        Stroke="#334155"
                        StrokeThickness="2"
                        Padding="20"
                        HeightRequest="120">
                    <Grid>
                        <!-- Spinning Numbers (shown while spinning) -->
                        <Label x:Name="SpinningLabel"
                               Text="???"
                               FontFamily="OrbitronBold"
                               FontSize="48"
                               TextColor="#fbbf24"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               IsVisible="False">
                            <Label.Shadow>
                                <Shadow Brush="#fbbf24" Offset="0,0" Radius="20" Opacity="0.5" />
                            </Label.Shadow>
                        </Label>

                        <!-- Result (shown after spin) -->
                        <VerticalStackLayout x:Name="ResultStack"
                                             IsVisible="False"
                                             VerticalOptions="Center"
                                             HorizontalOptions="Center"
                                             Spacing="4">
                            <Label Text="ðŸª™"
                                   FontSize="32"
                                   HorizontalOptions="Center" />
                            <Label x:Name="ResultLabel"
                                   FontFamily="OrbitronBold"
                                   FontSize="36"
                                   TextColor="#22c55e"
                                   HorizontalTextAlignment="Center">
                                <Label.Shadow>
                                    <Shadow Brush="#22c55e" Offset="0,0" Radius="15" Opacity="0.5" />
                                </Label.Shadow>
                            </Label>
                        </VerticalStackLayout>

                        <!-- Initial State -->
                        <Label x:Name="InitialLabel"
                               Text="TAP TO SPIN"
                               FontFamily="OrbitronBold"
                               FontSize="20"
                               TextColor="#64748b"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Grid>
                </Border>

                <!-- Prize Tiers -->
                <Grid ColumnDefinitions="*,*,*,*,*" ColumnSpacing="4">
                    <Border Grid.Column="0" StrokeShape="RoundRectangle 6" BackgroundColor="#14532d" Padding="4">
                        <Label Text="50" FontFamily="OrbitronBold" FontSize="11" TextColor="#86efac" HorizontalTextAlignment="Center" />
                    </Border>
                    <Border Grid.Column="1" StrokeShape="RoundRectangle 6" BackgroundColor="#1e3a5f" Padding="4">
                        <Label Text="100" FontFamily="OrbitronBold" FontSize="11" TextColor="#7dd3fc" HorizontalTextAlignment="Center" />
                    </Border>
                    <Border Grid.Column="2" StrokeShape="RoundRectangle 6" BackgroundColor="#4c1d95" Padding="4">
                        <Label Text="250" FontFamily="OrbitronBold" FontSize="11" TextColor="#c4b5fd" HorizontalTextAlignment="Center" />
                    </Border>
                    <Border Grid.Column="3" StrokeShape="RoundRectangle 6" BackgroundColor="#7c2d12" Padding="4">
                        <Label Text="500" FontFamily="OrbitronBold" FontSize="11" TextColor="#fdba74" HorizontalTextAlignment="Center" />
                    </Border>
                    <Border Grid.Column="4" StrokeShape="RoundRectangle 6" BackgroundColor="#7f1d1d" Padding="4">
                        <Label Text="1000" FontFamily="OrbitronBold" FontSize="10" TextColor="#fca5a5" HorizontalTextAlignment="Center" />
                    </Border>
                </Grid>

                <!-- Spin Button -->
                <Button x:Name="SpinButton"
                        Text="ðŸŽ² SPIN!"
                        FontFamily="OrbitronBold"
                        FontSize="18"
                        BackgroundColor="#f97316"
                        TextColor="White"
                        CornerRadius="12"
                        HeightRequest="50"
                        Clicked="OnSpinClicked" />

                <!-- Close Button -->
                <Button x:Name="CloseButton"
                        Text="Close"
                        FontFamily="InterSemiBold"
                        FontSize="14"
                        BackgroundColor="#334155"
                        TextColor="#94a3b8"
                        CornerRadius="10"
                        HeightRequest="44"
                        Clicked="OnCloseClicked" />
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
