<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BasketballArchetypeCollector"
             xmlns:converters="clr-namespace:BasketballArchetypeCollector.Converters"
             x:Class="BasketballArchetypeCollector.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:ZeroToVisibleConverter x:Key="ZeroToVisibleConverter" />
            <converters:NotNullConverter x:Key="NotNullConverter" />
            <converters:SortDirectionConverter x:Key="SortDirectionConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />
            <converters:BoolToTextConverter x:Key="BoolToTextConverter" />
            <converters:PlayerIdToCrestConverter x:Key="PlayerIdToCrestConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
