<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:BasketballArchetypeCollector.Controls"
             x:Class="BasketballArchetypeCollector.Controls.PlayerCard"
             x:Name="thisCard">

    <Border StrokeShape="RoundRectangle 12"
            StrokeThickness="2"
            Stroke="{Binding RarityColor, Source={x:Reference thisCard}}"
            BackgroundColor="#1e293b"
            Padding="8"
            HeightRequest="{Binding CardHeight, Source={x:Reference thisCard}}"
            WidthRequest="{Binding CardWidth, Source={x:Reference thisCard}}">

        <Grid RowDefinitions="Auto,*,Auto,Auto">
            <!-- Overall Badge -->
            <Border Grid.Row="0"
                    StrokeShape="RoundRectangle 8"
                    BackgroundColor="{Binding RarityColor, Source={x:Reference thisCard}}"
                    HorizontalOptions="End"
                    Padding="6,2">
                <Label Text="{Binding Player.Overall, Source={x:Reference thisCard}}"
                       FontFamily="OrbitronBold"
                       FontSize="14"
                       TextColor="White" />
            </Border>

            <!-- Player Info -->
            <VerticalStackLayout Grid.Row="1"
                                 VerticalOptions="Center"
                                 Spacing="2">
                <Label Text="{Binding Player.FirstName, Source={x:Reference thisCard}}"
                       FontFamily="InterRegular"
                       FontSize="11"
                       TextColor="#94a3b8"
                       LineBreakMode="TailTruncation" />
                <Label Text="{Binding Player.LastName, Source={x:Reference thisCard}}"
                       FontFamily="InterBold"
                       FontSize="14"
                       TextColor="White"
                       LineBreakMode="TailTruncation" />
                <Label Text="{Binding Player.TeamAbbreviation, Source={x:Reference thisCard}}"
                       FontFamily="InterRegular"
                       FontSize="10"
                       TextColor="#64748b" />
            </VerticalStackLayout>

            <!-- Stats Row -->
            <Grid Grid.Row="2"
                  ColumnDefinitions="*,*,*,*"
                  Margin="0,4,0,0">
                <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
                    <Label Text="{Binding Player.Ppg, Source={x:Reference thisCard}, StringFormat='{0:F1}'}"
                           FontFamily="OrbitronBold"
                           FontSize="9"
                           TextColor="White"
                           HorizontalTextAlignment="Center" />
                    <Label Text="PPG"
                           FontFamily="InterRegular"
                           FontSize="7"
                           TextColor="#64748b"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                    <Label Text="{Binding Player.Rpg, Source={x:Reference thisCard}, StringFormat='{0:F1}'}"
                           FontFamily="OrbitronBold"
                           FontSize="9"
                           TextColor="White"
                           HorizontalTextAlignment="Center" />
                    <Label Text="RPG"
                           FontFamily="InterRegular"
                           FontSize="7"
                           TextColor="#64748b"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center">
                    <Label Text="{Binding Player.Apg, Source={x:Reference thisCard}, StringFormat='{0:F1}'}"
                           FontFamily="OrbitronBold"
                           FontSize="9"
                           TextColor="White"
                           HorizontalTextAlignment="Center" />
                    <Label Text="APG"
                           FontFamily="InterRegular"
                           FontSize="7"
                           TextColor="#64748b"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="3" HorizontalOptions="Center">
                    <Label Text="{Binding Player.Games, Source={x:Reference thisCard}}"
                           FontFamily="OrbitronBold"
                           FontSize="9"
                           TextColor="White"
                           HorizontalTextAlignment="Center" />
                    <Label Text="GP"
                           FontFamily="InterRegular"
                           FontSize="7"
                           TextColor="#64748b"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
            </Grid>

            <!-- Rarity/Era Badges -->
            <HorizontalStackLayout Grid.Row="3"
                                   Spacing="4"
                                   Margin="0,4,0,0"
                                   HorizontalOptions="Center">
                <Border StrokeShape="RoundRectangle 4"
                        BackgroundColor="{Binding RarityColor, Source={x:Reference thisCard}}"
                        Padding="4,2">
                    <Label Text="{Binding Player.Rarity, Source={x:Reference thisCard}}"
                           FontFamily="InterSemiBold"
                           FontSize="8"
                           TextColor="White" />
                </Border>
                <Border StrokeShape="RoundRectangle 4"
                        BackgroundColor="{Binding EraColor, Source={x:Reference thisCard}}"
                        Padding="4,2">
                    <Label Text="{Binding Player.Era, Source={x:Reference thisCard}}"
                           FontFamily="InterSemiBold"
                           FontSize="8"
                           TextColor="White" />
                </Border>
            </HorizontalStackLayout>

            <!-- Locked Overlay -->
            <Border Grid.RowSpan="4"
                    BackgroundColor="#80000000"
                    StrokeShape="RoundRectangle 12"
                    IsVisible="{Binding IsLocked, Source={x:Reference thisCard}}">
                <Label Text="ðŸ”’"
                       FontSize="24"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Border>
        </Grid>
    </Border>
</ContentView>
